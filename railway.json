{
  "$schema": "https://railway.com/railway.schema.json",
  "deploy": {
    "startCommand": "export MOLTIS_DEPLOY_PLATFORM=railway && moltis --bind 0.0.0.0 --port $PORT --no-tls --config-dir /data/config --data-dir /data",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
